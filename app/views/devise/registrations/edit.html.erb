<div class="contents">
  <div class="main-contents">
    <h2>ユーザー情報の変更<!--<%= resource_name.to_s.humanize %>--></h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :ユーザーネーム %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "ユーザー名" %>
      </div>
    
       <div class="field">
        <%= f.label :お気に入りクラブ %><br />
        <%= f.collection_select :club_id, Club.all, :id, :name, include_blank: "選択してください" %>
      </div>
    
      <div class="field">
        <%= f.label :生年月日 %><br />
        <%= f.date_select :birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
      </div>
    
      <div class="field">
        <%= f.label :思い出の試合 %><br />
        <%= f.text_field :memorial_game, autofocus: true, autocomplete: "思い出の試合を入力しましょう！" %>
      </div>
    
      <div class="field">
        <%= f.label :自分のページを見てくれた人に一言！ %><br />
        <%= f.text_field :detail, autofocus: true, autocomplete: "よろしくお願いします。" %>
      </div>
    
      <div class="field">
        <%= f.label :新しいパスワード %> <i>(変更しない場合は空欄)</i><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード（確認） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :現在のパスワード %> <i>(ユーザ情報の更新のために必要です)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
    
      
    
      <div class="actions">
        <%= f.submit "更新する！" %>
      </div>
    <% end %>
    
    <h3>アカウントを削除する</h3>
    
    <p>Unhappy? <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    
      <div class="return-btn">
        <%= link_to "マイページにもどる", :back, class:'btn-handwrite' %>
      </div>
  </div>
</div>