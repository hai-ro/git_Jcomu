<div class="contents">
  <div class="main-contents">
    <div class="club-contents">
      <h1>クラブ一覧</h1>
      
      <div class="clubs_info">
        <ul class="odd">
          <% @clubs_odd.each do |club_odd| %>
            <li><%= link_to club_odd.name, club_path(club_odd.id) %></li>
          <% end %>
        </ul>
      
        <ul class="even">
          <% @clubs_even.each do |club_even| %>
            <li><%= link_to club_even.name, club_path(club_even.id) %></li>
          <% end %>
        </ul>
      </div>
    
    </div>
  </div>
</div>